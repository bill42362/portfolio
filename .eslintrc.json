{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-debugger": ["warn"],
    "no-console": ["warn"],
    "no-unused-vars": [
      "warn",
      {
        "ignoreRestSiblings": true
      }
    ],
    "linebreak-style": ["warn", "unix"],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": ["warn", "always"],
    "prettier/prettier": "warn",
    "react/no-unused-prop-types": ["warn"]
  }
}
